# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/secretly
REDIS_URL=redis://localhost:6379

# Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here
NODE_ENV=development

# Server Configuration
PORT=3000
LOG_LEVEL=info

# Feature Flags
ENABLE_CREDIT_CARD_DETECTION=true
ENABLE_SSN_DETECTION=true
ENABLE_API_KEY_DETECTION=true
ENABLE_PASSWORD_DETECTION=true
ENABLE_PII_DETECTION=true

# Rate Limiting
RATE_LIMIT_PER_USER=10
RATE_LIMIT_PER_CHANNEL=100
RATE_LIMIT_GLOBAL=1000

# Data Retention (days)
OBFUSCATION_RECORD_TTL=30
AUDIT_LOG_TTL=90